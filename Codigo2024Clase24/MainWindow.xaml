<Window x:Class="Codigo2024Clase24.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Codigo2024Clase24"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBox Text="{Binding Valor1}"  Margin="0 0 0 5"   Height="30" />
        <TextBox  Text="{Binding Valor2}" Margin="0 0 0 5" Height="30"/>
        <Button Content="Sumar"  Command="{Binding SumarCommand}" Height="30"/>
        <Button Content="Restar" Command="{Binding RestarCommand}" Height="30"/>
        <TextBlock Text="{Binding ResultadoSuma }" Height="30" />
        <TextBlock Text="{Binding ResultadoResta}" Height="30" />
                
    </StackPanel>
</Window>
